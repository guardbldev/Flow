{
  "scopeName": "source.flow",
  "name": "Flow",
  "fileTypes": ["fl"],
  "patterns": [
    {
      "name": "keyword.control.flow",
      "match": "\\b(var|let|state|func|async|await|return|if|else|for|while|break|continue|try|catch|throw|import|export|unsafe|platform)\\b"
    },
    {
      "name": "storage.type.flow",
      "match": "\\b(Int|Float|Bool|String|Char|Null|Any|Void|List|Map|Set|Tuple|Optional|Result|Range|Time|Date|URL|JSON|Regex)\\b"
    },
    {
      "name": "entity.name.type.flow",
      "match": "\\b(screen|window|page|view|component|slot|fragment|template|modal|dialog|overlay|portal|header|footer|section|article|nav|aside|main|container)\\b"
    },
    {
      "name": "keyword.other.layout.flow",
      "match": "\\b(row|column|stack|grid|align start|align center|align end|justify start|justify center|justify end|space between|space evenly|wrap|noWrap|gap|padding|margin|width|height|minWidth|maxWidth|minHeight|maxHeight|aspectRatio|overflow)\\b"
    },
    {
      "name": "entity.name.function.flow",
      "match": "\\b(func)\\s+[a-zA-Z_][a-zA-Z0-9_]*"
    },
    {
      "name": "constant.numeric.flow",
      "match": "\\b[0-9]+\\b"
    },
    {
      "name": "string.quoted.double.flow",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "comment.line.double-slash.flow",
      "match": "//.*$"
    }
  ]
}